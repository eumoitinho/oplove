  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Tela principal do OpenLove no desktop"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Timeline do OpenLove no mobile"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "shortcuts": [
    {
      "name": "Timeline",
      "short_name": "Feed",
      "description": "Ver timeline principal",
      "url": "/feed",
      "icons": [
        {
          "src": "/icons/feed.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Mensagens",
      "short_name": "Chat",
      "description": "Acessar mensagens",
      "url": "/feed?view=messages",
      "icons": [
        {
          "src": "/icons/messages.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Stories",
      "short_name": "Stories",
      "description": "Ver e criar stories",
      "url": "/feed?view=stories",
      "icons": [
        {
          "src": "/icons/stories.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Perfil",
      "short_name": "Perfil",
      "description": "Ver meu perfil",
      "url": "/feed?view=profile",
      "icons": [
        {
          "src": "/icons/profile.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+openlove",
      "url": "/handle?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/feed",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "video/*": [".mp4", ".webm", ".mov"]
      }
    }
  ]
}